<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest Version="7.0"
  ExtensionBundleId="com.subtitle.tool"
  ExtensionBundleVersion="1.0"
  ExtensionBundleName="Subtitle_Tool_Plugin">

  <ExtensionList>
    <Extension Id="com.subtitle.tool.panel" Version="1.0"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="[25.0,999]"/>
    </HostList>
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="12.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.subtitle.tool.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>
          <ScriptPath>./jsx/subtitles.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Semi_automatic_captions_tool</Menu>
          <Geometry>
            <Size>
              <Width>400</Width>
              <Height>800</Height>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
